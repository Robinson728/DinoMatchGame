<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" >Hola! @context.User.Identity.Name</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link" style="width:150px">Cerrar Sesión</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Registrarse</a>
        <a href="Identity/Account/Login">Iniciar Sesión</a>
    </NotAuthorized>
</AuthorizeView>

